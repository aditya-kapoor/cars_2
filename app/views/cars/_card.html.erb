<div class="card mb-3">
  <h2 class="card-header h4">
    Car #<%= car.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @car.user.present? %>
          <%= link_to car.user, car.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>Manufacturer</dt>
      <!-- Display manufacturer_id start -->
      <dd>
        <% if @car.manufacturer.present? %>
          <%= link_to car.manufacturer, car.manufacturer %>
        <% end %>
      </dd>
      <!-- Display manufacturer_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back car, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link car start -->
      <div class="col">
        <% if current_user == @car.user %>
          <%= link_to edit_car_url(car), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link car end -->

      <!-- Delete link car start -->
      <div class="col">
        <% if current_user == @car.user %>
          <%= link_to car, method: :delete, data: { confirm: "Do you really want to delete this car?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link car end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(car.updated_at) %> ago
  </div>
</div>
