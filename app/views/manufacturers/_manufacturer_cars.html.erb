<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Cars

    <a data-toggle="collapse" href="#manufacturer_cars_new_form">
      Add car
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @manufacturer.cars.each do |car| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to car.id, car_path(car) %>

        <% if current_user == car.user %>
          <%= link_to car, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="manufacturer_cars_new_form">
        <%= render partial: "manufacturers/manufacturer_cars_new_form" %>
      </div>
    </div>

  </ul>
</div>
